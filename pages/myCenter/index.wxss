form {
  display: block;
}

.item {
  display: flex;
  margin-left:10px;
  box-sizing: border-box;
  height: 48px;
  font-size: 14px;
  border-bottom: 1px solid #F0F0F0;
}
.item label {
  width: 60px;
  margin-right: 10px;
  box-sizing: border-box;
  line-height: 48px;
  color:#3C3C3C;
}
.item input {
  flex:1;
  height: 48px;
  line-height: 48px;
}